<canvas id="matrix" >Sorry Browser Doesn't Support HTML5</canvas>
	<div class="containers containerMargin">
		<div class="box siteTitle">h4x0r N3ws</div>
	</div>

	<div class="containers containerMargin">
		<div class="box">
			{{#each articles}}
			<div class="articleContainer" id="story_{{@index}}" data-articleNum="{{@index}}" data-obj_id="{{_id}}">
				<div class="borderTitleBox">
					<p class="articleTitleText">{{title}}</p>
				</div>

				<div class="containerMargin">
					<p class="articleBodyText">
						{{byline}}
					</p>
				</div>

				<div class="containerMargin">
					<p class="articleLinkText"><a href="{{url}}" target="_blank">{{url}}</a></p>

				</div>
				
			</div>
			{{/each}}
			
			<div class="arrowContainer">
				<div class="arrowBox noselect" id="arrowLeft" data-position="1">
				 	<p> &#171; </p>
				</div>
				<div class="arrowBox noselect" id="arrowRight" data-position="1">
					 <p> &#187; </p>
				</div>
			</div>
		</div>

	</div>

	<div class="containers containerMargin">

		<div class="box">
			<div class="commentContainer">

				<div class="borderTitleBox">
					<p class="commentHeaderText">Comments</p>
				</div>

				<div class="commentMargin">

					<div class="commentBox commentTitleBoxWidth" id="commentTitleBox">
						
					</div>

					<div class="commentBox commentTextBoxWidth" id="commentBodyBox">

						
					</div>

				</div>

			</div>

		
		</div>

	</div>


	<div class="containers containerMargin">

		<div class="box">
			<div class="addCommentContainer">

				<div class="borderTitleBox">
					<p class="commentHeaderText">Add Comment</p>
				</div>

				<div class="addCommentBox">
					<p class="addingComments">Title: <input type="text" id="commentTitle" class="commentTextbox"></p>
					<p class="addingComments">Comment: <input type="text" id="commentBody" class="commentTextbox"></p>
					<p class="submitComments"><button type="button" class="submitButton" id ="sendComment" data-currentArticle="0">Submit</button></p>

				</div>

			</div>

		
		</div>

	</div>
